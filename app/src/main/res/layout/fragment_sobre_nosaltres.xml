<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main">

    <TextView
        android:id="@+id/text_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearlayout_aboutus"
        android:layout_width="372dp"
        android:layout_height="601dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_send"
        app:layout_constraintVertical_bias="0.315">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="285dp"
            android:layout_height="285dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"
            android:clickable="false"
            app:srcCompat="@drawable/logo_empresa" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras ut elementum mauris, vitae ornare est. Vestibulum tincidunt lorem tellus, vitae tempus lacus pulvinar eu. Cras et ipsum feugiat, eleifend lorem ac, lacinia neque. In luctus, metus non interdum vestibulum, mi est pellentesque libero, vitae vulputate libero nisi sit amet purus. Suspendisse non sapien id mauris tincidunt pellentesque at porta diam. Duis dignissim varius orci, a tempus ipsum. In placerat in ante vitae vehicula. Nunc hendrerit eget augue eget sodales. " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/logo_dature" />

            <TextView
                android:id="@+id/tv_webDature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="40dp"
                android:text="@string/web_dature" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>