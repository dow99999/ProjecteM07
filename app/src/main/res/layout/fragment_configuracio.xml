<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10">

        <TextView
            android:id="@+id/tv_num_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/config_num_posts"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/paletaVerdes_light"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_num_posts"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_num_mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/config_num_mapa"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/paletaVerdes_light"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_num_map"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:backgroundTint="@color/black"
                android:hapticFeedbackEnabled="false" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>